<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mylabpatient.Fragments.AddHomeVisitsFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/BookHomeVisitTopTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:typeface="monospace"
                android:text="Book Home Visit"
                android:gravity="center"
                android:background="@color/blue"
                android:padding="5dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/BookHomeVisitsecondTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BookHomeVisitTopTitle"
                android:textSize="15dp"
                android:padding="2dp"
                android:typeface="monospace"
                android:text="Home Visit Can be obtained for 2 week in advance"
                android:background="@color/blue200"
                android:textColor="@color/black"/>


            <LinearLayout
                android:id="@+id/BookHomeVisitDate"
                android:layout_below="@+id/BookHomeVisitsecondTitle"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsDate"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Date"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/spiBookHomeVisitsDate"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/textview"
                    android:background="@drawable/spinnerbackground"
                    style="@style/spinner_style"
                    android:dropDownVerticalOffset="-53dp"
                    android:spinnerMode="dropdown"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/Select_Date"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitTime"
                android:layout_below="@+id/BookHomeVisitDate"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsTime"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Time Slot"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/spiBookHomeVisitsTime"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:background="@drawable/spinnerbackground"
                    style="@style/spinner_style"
                    android:dropDownVerticalOffset="-53dp"
                    android:spinnerMode="dropdown"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/Time_Scheduled"
                    android:prompt="@string/Select_Time"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitContact"
                android:layout_below="@+id/BookHomeVisitTime"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsContact"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Contact"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/edtBookHomeVisitsContact"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Cotact"
                    android:typeface="monospace"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitArea"
                android:layout_below="@+id/BookHomeVisitContact"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsArea"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Area"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/edtBookHomeVisitsArea"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Area"
                    android:typeface="monospace"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitAddress"
                android:layout_below="@+id/BookHomeVisitArea"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsAddress"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Address"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/edtBookHomeVisitsAddress"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:typeface="monospace"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitRemark"
                android:layout_below="@+id/BookHomeVisitAddress"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsRemark"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Remark"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/edtBookHomeVisitsRemark"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Remark"
                    android:typeface="monospace"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitPrescription"
                android:layout_below="@+id/BookHomeVisitRemark"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsPrescription"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Add Prescription .jpg or .pdf only "
                    android:textColor="@color/black"/>

                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/camera"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/txtBookHomeVisitsPrescriptionName"
                        android:layout_gravity="center_vertical"/>

                    <Button
                         android:id="@+id/btnBookHomeVisitsPrescriptionFileName"
                         android:layout_width="130dp"
                        android:layout_alignParentRight="true"
                         android:text="take a picture"
                         android:textSize="12dp"
                        android:layout_centerInParent="true"
                         android:layout_gravity="center"
                         android:typeface="monospace"
                        android:layout_marginRight="20dp"
                        android:foregroundGravity="center_vertical"
                         android:background="@drawable/btncornerblue"
                         android:layout_height="30dp" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitPreferLab"
                android:layout_below="@+id/BookHomeVisitPrescription"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBookHomeVisitsPreferLab"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:padding="2dp"
                    android:typeface="monospace"
                    android:text="Preferred Lab"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/spiBookHomeVisitsPreferLab"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinnerbackground"
                    style="@style/spinner_style"
                    android:dropDownVerticalOffset="-53dp"
                    android:spinnerMode="dropdown"
                    android:drawSelectorOnTop="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BookHomeVisitPreferSubmit"
                android:layout_below="@+id/BookHomeVisitPreferLab"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnBookHomeVisitsBook"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@drawable/btncornerblue"
                    android:text="Book"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btnBookHomeVisitsClear"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@drawable/btncornerorange"
                    android:text="Clear"
                    android:layout_marginRight="20dp"
                    android:gravity="center"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
