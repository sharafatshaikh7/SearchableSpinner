<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Login"
    android:background="@drawable/orangeitems">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordDialogTop">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close2"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/filechooserclosedialog"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordTitle"
        android:text="Which Type Of File You Have?"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:layout_gravity="center"/>



    <LinearLayout
        android:id="@+id/BookHomeVisitPreferSubmit"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_pdf_dialog"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:typeface="monospace"
            android:background="@drawable/btncornerblue"
            android:text="i have .pdf file!"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_marginRight="30dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_jpg_dialog"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:typeface="monospace"
            android:background="@drawable/btncornerblue"
            android:text="i have .jpg file!"
            android:layout_marginRight="20dp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>