<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordDialogTop">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close2"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/reasonCloseWindow"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordTitle"
        android:text="Select Reason"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/PasswordDialogMiddle"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spi_reasonCancel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinnerbackground"
            style="@style/spinner_style"
            android:dropDownVerticalOffset="-53dp"
            android:spinnerMode="dropdown"
            android:drawSelectorOnTop="true">
        </Spinner>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/btnReasonSubmit"
            android:gravity="center"
            android:text="Submit"
            android:typeface="monospace"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:background="@color/blue"
            android:layout_below="@+id/spi_reasonCancel"/>

    </RelativeLayout>

</LinearLayout>