<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mylabpatient.Fragments.PreviousHomeVisits">

    <TextView
        android:id="@+id/previousHomeVisitHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:shadowColor="#000000"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:gravity="center"
        android:background="@color/blue"
        android:text="BOOKED HOME VISIT LIST" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listviewPreviousHomeVisit"
        android:layout_below="@+id/previousHomeVisitHeading"
        android:divider="@color/orange1"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
